<?xml version="1.0"?>
<robot name = "robot_model" xmlns:xacro="http://www.ros.org/wiki/xacro">

<!-- Pi constant -->
<xacro:property name="pi_const" value="3.1415"/>

<!-- Body Dimessions --> 
<xacro:property name="a" value="1.0"/>
<xacro:property name="b" value="0.3"/>
<xacro:property name="c" value="0.6"/>


<!-- Wheel & Castor dim -->
<xacro:property name="r" value="0.15"/>
<!-- Wheel width -->
<xacro:property name="d" value="0.1"/>

<xacro:property name="s1" value="${b/2 +r}"/>
<xacro:property name="s2" value="${2*r}"/>
<xacro:property name="s3" value="${2*r}"/>
<xacro:property name="s4" value="${c/2 + d/2}"/>


<!-- Material density -->
<!-- Body material density --> 

<xacro:property name="d1" value="2710.0"/>
<!-- Wheel material density -->
<xacro:property name='d2' value="2710.0"/>
<!-- Castor wheel -->
<xacro:property name="d3" value="2710.0"/>

<!--Robot body mass, wheel mass, caster mass -->
<!--body -->
<xacro:property name="m1" value="${d1*a*b*c}"/>
<!-- Wheel -->
<xacro:property name="m2" value="${d2*pi_const*r*r*d}"/>
<!-- caster -->
<xacro:property name="m3" value="${d3*(4.0/3.0)*pi_const*r*r*r}" />


<!-- Moments of inertia of the robot body -->
<xacro:property name="Ix_body" value="${(1/12)*m1*(b*b+c*c)}" />
<xacro:property name="Iy_body" value="${(1/12)*m1*(a*a+b*b)}" />
<xacro:property name="Iz_body" value="${(1/12)*m1*(a*a+c*c)}" />


<!-- Moments of inertia of the Wheel -->
<xacro:property name="Iz_wheel" value="${0.5*m2*r*r}" />
<xacro:property name="I_wheel" value="${(1/12)*m2*(3.0*r*r + d*d)}" />


<!-- Moment of inertia of castor --> 
<xacro:property name="I_castor" value="${(2/5)*m3*r*r}" />



<!-- inertia section of the body -->
<xacro:macro name="inertia_body">
    <inertial> 
    <!-- Dispacement and orientation of center of mass -->
    <origin rpy="0 0 0" xyz="0 0 ${s1}" />
    <mass value="${m1}" />
    <inertia ixx = "${Ix_body}" iyy="${Iy_body}" izz = "${Iz_body}" iyz="0.0" ixy="0.0" ixz="0.0" />
    </inertial>
</xacro:macro>

        

<!-- inertia section of the wheel -->
<xacro:macro name = "inertia_wheel">
    <inertial>
    <origin rpy="1.570795 0 0" xyz="0 0 0"/>
    <mass value="${m2}" />
    <inertia ixx ="${I_wheel}" ixy = "0.0" iyy="${I_wheel}" iyz="0.0" izz="${Iz_wheel}" ixz="0.0" />
    </inertial>
</xacro:macro>



<!-- inertia for castor -->
<xacro:macro name="inertia_castor">
    <inertial>
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <mass value="${m3}"/>
    <inertia ixx="${I_castor}" ixy="0.0" iyy="${I_castor}" iyz="0.0" izz="${I_castor}" ixz="0.0" />
    </inertial>
</xacro:macro>



<!-- Gazebo -->
<xacro:include filename="$(find mobile_robot)/model/robot.gazebo" />


<!-- Links and joints -->
<!-- Friction links -->
<link name="base_footprint"></link>

<joint name="body_link_joint" type="fixed">
    <parent link="base_footprint" />
    <child link="body_link" />
</joint>



<!-- Body link -->
<link name="body_link">
    <visual>
        <geometry>
            <box size="${a} ${c} ${b}" />
        </geometry>
    <origin rpy="0 0 0" xyz="0 0 ${s1}" />
    </visual>

    <collision>
        <geometry>
            <box size="${a} ${c} ${b}" />
        </geometry>
    <origin rpy="0 0 0" xyz="0 0 ${s1}" />
    </collision>

    <xacro:inertia_body />
</link>


<!-- Back right wheel -->
<joint name="wheel1_joint" type="continuous">
    <parent link="body_link" />
    <child link="wheel1_link" />
    <origin xyz="${-s2} ${-s4} ${r}" rpy="0 0 0" />
    <axis xyz="0 1 0" />
    <limit effort="50000" velocity = "10" />
    <dynamics damping="1.0" friction="1.0" />
</joint>

<link name = "wheel1_link">
    <visual>
        <geometry>
            <cylinder length="${d}" radius="${r}" />
        </geometry>
        <origin rpy="1.570795 0 0" xyz="0 0 0" />
    </visual>

    <collision>
        <origin rpy="1.570795 0 0" xyz="0 0 0" />
        <geometry>
            <cylinder length="${d}" radius="${r}" />
        </geometry>
    </collision>

    <xacro:inertia_wheel/>
</link>
 

<!-- Back left wheel -->
<joint name="wheel2_joint" type="continuous">
    <parent link="body_link" />
    <child link="wheel2_link" />
    <origin xyz="${-s2} ${s4} ${r}" rpy="0 0 0" />
    <axis xyz="0 1 0" />
    <limit effort="50000" velocity = "10" />
    <dynamics damping="1.0" friction="1.0" />
</joint>

<link name = "wheel2_link">
    <visual>
        <geometry>
            <cylinder length="${d}" radius="${r}" />
        </geometry>
        <origin rpy="1.570795 0 0" xyz="0 0 0" />
    </visual>

    <collision>
        <origin rpy="1.570795 0 0" xyz="0 0 0" />
        <geometry>
            <cylinder length="${d}" radius="${r}" />
        </geometry>
    </collision>

    <xacro:inertia_wheel/>
</link>



<!-- Castor Wheel -->
<joint name="castor_wheel" type="fixed">
    <parent link="body_link" />
    <child link="castor_link" />
    <origin xyz="${s3} 0 ${r}" rpy="0 0 0" />
</joint>

<link name="castor_link">
    <visual>
        <geometry>
            <sphere radius="${r}" />
        </geometry>
        <origin rpy="0 0 0" xyz="0 0 0" />
    </visual>

    <collision>
        <origin rpy="0 0 0" xyz="0 0 0" />
        <geometry>
            <sphere radius="${r}" />
        </geometry>
    </collision>
    <xacro:inertia_castor />
</link>


<!-- LiDar Link -->
<joint name = "lidar_joint" type="fixed">
    <parent link="body_link" />
    <child link="lidar_link" />
    <origin xyz="0 0 ${b+r}" rpy = "0 0 0" />
    <axis xyz="0 1 0" />
</joint>

<link name="lidar_link">
    <visual>
        <geometry>
            <cylinder length="0.1" radius="0.1" />
        </geometry>
        <origin rpy = "0 0 0" xyz="0 0 0.05" />
    </visual>

    <collision name = 'collision'>
        <origin rpy = "0 0 0" xyz="0 0 0.05" />
        <geometry>
            <cylinder length="0.1" radius="0.1" />
        </geometry>
    </collision>

    <inertial>
        <mass value="1e-6" />
        <origin xyz="0 0 0" rpy="0 0 0" />
        <inertia ixx = "1e-6" ixy="0" iyy = "1e-6" izz = "1e-6" iyz="0" ixz="0" />
    </inertial>
</link>
</robot>



